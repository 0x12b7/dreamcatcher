{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,
		"baseUrl": ".",
		"paths": {
			/// common
			"@seal": ["src/web/common/module/seal/Index.ts"],
			"@common/*": ["src/web/common/*"],
			
			/// react
			"@style/*": ["src/web/style/*"],
			"@component/*": ["src/web/component/*"],
			"@retro-minima": ["src/web/component/module/retro-minima/Index.ts"],
			"@chrt": ["src/web/component/module/chart/Index.ts"],
			"@silk": ["src/web/component/module/silk/Index.ts"]
		}
	}
}